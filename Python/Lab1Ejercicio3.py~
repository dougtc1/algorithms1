# Variables
#        b: int // Valor que almacena un valor

# Valores iniciales
b=20


# Precondicion
assert (b>0)

print "Valor inicial"
print b

# Calculo

# Postcondicion
assert (b%2 == 0)

# Salida
print "El numero b= ",b,"es par."
